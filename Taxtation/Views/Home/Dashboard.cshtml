
@{
    ViewData["Title"] = "Dashboard";
}
<style>
    .chart {
        width: 100%;
       
    }

    .row {
        margin: 0 !important;
    }
</style>
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<div class="row">
    <div class="col-md-6">
        <div id="chart_div" class="chart"></div>
    </div>
    <div class="col-md-6">
        <div id="chart_div1" class="chart"></div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <div id="chart_div2" class="chart"></div>
    </div>
    <div class="col-md-6">
        <div id="chart_div3" class="chart"></div>
    </div>
</div>


<script type="text/javascript">

    google.charts.load('current', {
        packages: ['corechart', 'bar']
    });
    google.charts.setOnLoadCallback(LoadData);

    function LoadData() {
        $.ajax({
            url: '@Url.Action("CurrencyChart","Home")',
            dataType: "json",
            type: "GET",
            error: function(xhr, status, error) {
                var err = eval("(" + xhr.responseText + ")");
                toastr.error(err.message);
            },
            success: function(data) {
                CurrencyChart(data);
                return false;
            }
        });
        return false;
    }

    function CurrencyChart(data) {
        var dataArray = [
            ['Cur', 'USD', 'PKR','AUD','AED']
        ];
        $.each(data, function(i, item) {
            dataArray.push([1, 100, 1,85,40])  ;
        });
        var data = google.visualization.arrayToDataTable(dataArray);
        var options = {
            title: 'Currency',
            chartArea: { left: 80, top: 70, right: 100, width: "50%", height: "70%" },
          
            height: 250,
            colors: ['#03103A', '#9AB5CA'],
            hAxis: {
                title: 'Rate',

            },
            vAxis: {
                title: 'Currency'
            }

        };
        var chart = new google.visualization.BarChart(document.getElementById('chart_div'));
        chart.draw(data, options);
        var chart1 = new google.visualization.ColumnChart(document.getElementById('chart_div1'));
        chart1.draw(data, options);
        var chart2 = new google.visualization.LineChart(document.getElementById('chart_div2'));
        chart2.draw(data, options);
        var chart3 = new google.visualization.BarChart(document.getElementById('chart_div3'));
        chart3.draw(data, options);
        return false;
    }

    $(window).resize(function () {
        LoadData();
        
    });
</script>


