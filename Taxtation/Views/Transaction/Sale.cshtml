                if (discount != '') {
                    var amtAfterExcise = document.getElementById("Detail_sale_" + rowNo + "__AmtAfterExcise").value;
                    var discType = document.getElementById("Detail_saleDetail_" + rowNo + "__SalDisType").value;
                    if (discType == "PERCENT") {
