        function storeChange() {
            var rowCount = $('#myTable tbody tr').length;

            for (var i = 0; i < rowCount; i++) {
                if ($('#Detail_saleDetail_' + i + '__ItmId').val() != '-1' && $('#master_StrId').val() != '') {
                    $.ajax({
                        type: 'GET',
                        url: '/Transaction/itemQuantity',
                        data: { ItmId: $('#Detail_saleDetail_' + i + '__ItmId').val(), StrId: $('#master_StrId').val() },
                        async: false,
                        dataType: 'json',
                        contentType: "application/json; charset=utf-8",
                        success: function (result) {
                            if (result != undefined) {
                                $('#Detail_sale_' + i + '__StockQuantity').val(result);
                            }
                            else { $('#Detail_sale_' + i + '__StockQuantity').val(''); }
                        },
                        error: function () {
                        }
                    })
                }
                else { $('#Detail_sale_' + i + '__StockQuantity').val(''); }

            }
        }


        function changeItem(item) {
            var trNo = item.dataset.rowno;
            debugger;

            var _repeatItem = false;
            var rowCount = $('#myTable tbody tr').length;
            if ($('#Detail_saleDetail_' + trNo + '__ItmId').val() == '-1') {
                $('#Detail_sale_' + trNo + '__BarCode').val('');
                $('#Detail_sale_' + trNo + '__UOM').val('');
                $('#Detail_sale_' + trNo + '__LastPrice').val('');
                $('#Detail_sale_' + trNo + '__StockQuantity').val('');
                return;
            }
            for (var i = 0; i < rowCount; i++) {

                if ($('#Detail_saleDetail_' + i + '__ItmId').val() == item.value && trNo != i) {
                    _repeatItem = true;
                    $('#Detail_saleDetail_' + trNo + '__ItmId').attr('Selected', true).val("-1");
                    break;
                }

            }
            if (_repeatItem == false) {
                $.ajax({
                    type: 'GET',
                    url: '/Transaction/changeItem',
                    data: { id: item.value },
                    dataType: 'json',
                    async: false,
                    contentType: "application/json; charset=utf-8",
                    success: function (result) {
                        $('#Detail_sale_' + trNo + '__BarCode').val(result.itmBcode);
                        $('#Detail_sale_' + trNo + '__UOM').val(result.itmUom);
                        $('#Detail_sale_' + trNo + '__LastPrice').val(result.itmSp);
                        $.ajax({
                            type: 'GET',
                            url: '/Transaction/itemQuantity',
                            data: { ItmId: $('#Detail_saleDetail_' + trNo + '__ItmId').val(), StrId: $('#master_StrId').val() },
                            async: false,
                            dataType: 'json',
                            contentType: "application/json; charset=utf-8",
                            success: function (stQuantity) {
                                if (stQuantity != undefined) {
                                    $('#Detail_sale_' + trNo + '__StockQuantity').val(stQuantity);
                                }
                                else { $('#Detail_sale_' + trNo + '__StockQuantity').val(0); }
                            },
                            error: function () {
                            }
                        })
                    },
                    error: function () {
                    }
                })
            }
            else {
                $('#Detail_sale_' + trNo + '__BarCode').val('');
                $('#Detail_sale_' + trNo + '__UOM').val('');
                $('#Detail_sale_' + trNo + '__LastPrice').val('');
                $('#Detail_sale_' + trNo + '__StockQuantity').val('');
            }

        }

        function changeQuantityAndRate(QtyRate) {
            debugger;
            var rowNo = QtyRate.dataset.rowno;

            var ExciseSlab = $('#Detail_saleDetail_' + rowNo + '__ExciseId').val();
            var TaxSlab = $('#Detail_saleDetail_' + rowNo + '__TaxId').val();
            if (ExciseSlab != '-1') {
                $.ajax({
                    type: 'GET',
                    url: '/Transaction/changeTax',
                    data: { id: ExciseSlab },
                    dataType: 'json',
                    async: false,
                    contentType: "application/json; charset=utf-8",
                    success: function (result) {
                        $('#Detail_saleDetail_' + rowNo + '__SalExcisePer').val(result.taxPercent);
                        var subAmount = $('#Detail_sale_' + rowNo + '__Amount').val();
                        $('#Detail_saleDetail_' + rowNo + '__SalExAmt').val((parseFloat(subAmount) * parseFloat(result.taxPercent) / parseFloat(100)).toFixed(2));

                    },
                    error: function () {
                    }
                })
            }
            else {
                $('#Detail_saleDetail_' + rowNo + '__SalExcisePer').val('');
                $('#Detail_saleDetail_' + rowNo + '__SalExAmt').val('');
            }

            if (TaxSlab != '-1') {
                $.ajax({
                    type: 'GET',
                    url: '/Transaction/changeTax',
                    data: { id: TaxSlab },
                    async: false,
                    dataType: 'json',
                    contentType: "application/json; charset=utf-8",
                    success: function (result) {
                        $('#Detail_saleDetail_' + rowNo + '__SalVatper').val(result.taxPercent);
                        var AmtAfterDisc = $('#Detail_sale_' + rowNo + '__AmtAfterDiscount').val();
                        $('#Detail_saleDetail_' + rowNo + '__SalTaxAmount').val((parseFloat(AmtAfterDisc) * parseFloat(result.taxPercent) / parseFloat(100)).toFixed(2));

                    },
                    error: function () {
                    }
                })
            }
            else {
