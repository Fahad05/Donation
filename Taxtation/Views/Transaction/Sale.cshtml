                    $('#detail_detail_' + rowNo + '__PurExAmt').val((parseFloat(subAmount) * parseFloat(ExcPercent) / parseFloat(100)).toFixed(2));
                    $('#Detail_sale_' + rowNo + '__AmtAfterExcise').val((parseFloat(subAmount) + ((parseFloat(subAmount) * parseFloat(ExcPercent)) / 100)).toFixed(2));
                    var afterExcise = $('#Detail_sale_' + rowNo + '__AmtAfterExcise').val();
                    $('#Detail_sale_' + rowNo + '__AmtAfterDiscount').val((parseFloat(afterExcise)).toFixed(2));
                    $('#Detail_saleDetail_' + rowNo + '__SalNetAmt').val(parseFloat(afterExcise).toFixed(2));
                    $('#Detail_saleDetail_' + rowNo + '__SalGrossAmt').val((parseFloat(afterExcise) * parseFloat(ExhRate)).toFixed(2));
