                    $('#Detail_saleDetail_' + rowNo + '__SalNetAmt').val(parseFloat(AmtAfterDisc).toFixed(2));
                    $('#Detail_saleDetail_' + rowNo + '__SalGrossAmt').val((parseFloat(AmtAfterDisc) * parseFloat(ExhRate)).toFixed(2));
